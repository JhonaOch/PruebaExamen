<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="persistencia" transaction-type="JTA">
    <jta-data-source>jdbc/__libro</jta-data-source>
    <class>ups.edu.ec.modelo.Autor</class>
    <class>ups.edu.ec.modelo.Capitulos</class>
    <class>ups.edu.ec.modelo.Libro</class>
    

    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create-or-extend-tables"/>
    </properties>
  </persistence-unit>
</persistence>
